<div class="login-content mx-16">

  {{!-- HOLD ME ACCOUNTABLE PAGE TITLE --}}
  <h1 id="login-page-h1" class="flex justify-center mb-20">
    HOLD ME 
    <br/>
    ACCOUNTABLE.
  </h1>


  <div class="login-input-wrapper flex justify-center ">
    {{!-- LOGIN FORM --}}
    <form class="login-form mr-8">
      <div>
        <label class="text-xl mr-2" for="email-login">Email:</label>
        <input class="login-input mb-2 px-2" type="text" id="email-login" />
      </div>
      <div>
        <label class="text-xl mr-2" for="password-login">Password:</label>
        <input
          class="login-input mb-2 px-2"
          type="password"
          id="password-login"
        />
      </div>
      <div>
        <button class="login-button text-xl" type="submit">login</button>
      </div>
    </form>

    {{!-- SIGNUP FORM --}}
    <form class="signup-form">
      <div>
        <label class="text-xl mr-2" for="username-signup">Username:</label>
        <input class="login-input mb-2 px-2" type="text" id="username-signup" />
      </div>
      <div>
        <label class="text-xl mr-2" for="email-signup">Email:</label>
        <input class="login-input mb-2 px-2" type="text" id="email-signup" />
      </div>
      <div>
        <label class="text-xl mr-2" for="password-signup">Password:</label>
        <input
          class="login-input mb-2 px-2"
          type="password"
          id="password-signup"
        />
      </div>
      <div>
        <button class="signup-button text-xl" type="submit">signup</button>
      </div>
    </form>

  </div>
</div>


<script src="/javascript/login.js"></script>