<!-- HEADER START -->
<header>
  <h1>
    <a href="/">Hold Me Accountable.</a>
  </h1>
  <div>
    <input class="search-input mr-1 mb-2 px-2" type="text" placeholder="Search" id="search-bar" />
    <i class="search-icon mr-5 fa-solid fa-magnifying-glass"></i>
    <span class="text-white">â”‚</span>
    <button id="logout" class="logout-button ml-5">Logout</button>
  </div>
</header>

<main>
  <div class="profile-title grid grid-cols-4">
    <img src="https://loremflickr.com/250/250" />
    <div class="col-start-2 col-span-2">
      <h1>{{userData.username}}</h1>
      <p>My Bad Habit: <span>{{post.title}}</span></p>
      <form class="habit-form inline-flex col-span-2">
        <input class="text-input mr-3 px-2 py-1" type="text" placeholder="Update your bad habit..." name="habit-field" />
        <button type="submit">Save</button>
      </form>
    </div>
  </div>

  <hr class="hr-1 mx-auto">

  <div class="logs">
    <div class="update-log">
      <h1 class="card-header">{{userData.username}}'s Update Log</h1>
      <div class="contents">
        <ol class="post-list overflow-y-auto">
          {{#each updates as |update|}}
          <li>
            <article class="post">
              <div class="passage">
                <p>{{update.updates_text}}</p>
              </div>
              <div class="meta">
               <p>{{update.createdAt}}</p>
              </div>
            </article>
          </li>
          <hr>
          {{/each}}
        </ol>
      </div>
    </div>

    <div class="comment-log">
      <h1 class="card-header">Comments</h1>
      <div class="contents">
        <ol class="post-list overflow-y-auto">
          {{#each comments as |comment|}}
          <li>
            <article class="post">
              <div class="passage mr-8">
                <p>{{comment.comment_text}}</p>
              </div>
              <div class="meta">
                By {{../userData.username}} on {{comment.createdAt}} <button class="delete-comment float-right mr-4" onclick="deleteComment( {{comment.id}} )"><i class="fa-solid fa-trash-can"></i></button>
              </div>
            </article>
          </li>
          <hr>
          {{/each}}
        </ol>
      </div>
    </div>
  </div>

  <div class="forms-wrapper">
    <form class="updates-form inline-flex">
      <input class="text-input mr-3 px-2 py-1" type="text" placeholder="Add an update..." name="update-field" />
      <button type="submit">Update</button>
    </form>

    <form class="comment-form inline-flex">
      <input class="text-input mr-3 px-2 py-1" type="text" placeholder="Add a comment..." name="comment-field" />
      <button type="submit">Comment</button>
    </form>
  </div>


</main>

<script src="/javascript/logout.js"></script>
<script src="/javascript/text-fields.js"></script>